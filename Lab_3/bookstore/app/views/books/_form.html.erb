<%= form_with model: @book do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @book.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <br>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @book.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <br>
    <%= form.label :price %><br>
    <%= form.number_field :price %>
    <% @book.errors.full_messages_for(:price).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <br>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
    <% @book.errors.full_messages_for(:image).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>

  <div>
  <br>
    <%= form.submit %>
  <br><br>
  </div>
<% end %>

<button>
    <%= link_to "Back", books_path %>
</button>
